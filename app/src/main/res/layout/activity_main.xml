<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="1"
    android:orientation="vertical"
    android:padding="10pt"
    tools:context=".MainActivity">


    <EditText
        android:id="@+id/display"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:layout_weight="1"
        android:gravity="end"
        android:paddingTop="20pt"
        android:textSize="70sp"
        android:background="@color/grayButton"
        android:textColor="@color/white"
        android:inputType="textPersonName"
        android:text="0" />

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0"
        >

        <TableRow
            android:layout_marginBottom="1pt"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/btnClear"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_weight="1"
                android:layout_marginRight="1pt"
                android:textSize="18sp"
                android:background="@color/lightgrayBg"
                android:text="AC" />

            <Button
                android:id="@+id/btnMinusPlus"
                android:onClick="btnEvent"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_weight="1"
                android:layout_marginRight="1pt"
                android:textSize="18sp"
                android:background="@color/lightgrayBg"
                android:text="+/-" />

            <Button
                android:id="@+id/btnMod"
                android:onClick="operationEvent"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:textSize="18sp"
                android:layout_marginRight="1pt"
                android:layout_weight="1"
                android:background="@color/lightgrayBg"
                android:text="%" />

            <Button
                android:id="@+id/btnDiv"
                android:onClick="operationEvent"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:textSize="18sp"
                android:textColor="@color/white"
                android:background="@color/orangeButton"
                android:layout_weight="1"
                android:text="/" />
        </TableRow>

        <TableRow
            android:layout_marginBottom="1pt"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/btn7"
                android:onClick="btnEvent"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:textSize="18sp"
                android:layout_marginRight="1pt"
                android:background="@color/lightgrayBg"
                android:layout_weight="1"
                android:text="7" />

            <Button
                android:id="@+id/btn8"
                android:onClick="btnEvent"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:textSize="18sp"
                android:layout_marginRight="1pt"
                android:background="@color/lightgrayBg"
                android:layout_weight="1"
                android:text="8" />

            <Button
                android:id="@+id/btn9"
                android:onClick="btnEvent"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:textSize="18sp"
                android:layout_marginRight="1pt"
                android:background="@color/lightgrayBg"
                android:layout_weight="1"
                android:text="9" />

            <Button
                android:id="@+id/btnMul"
                android:onClick="operationEvent"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_weight="1"
                android:textSize="18sp"
                android:textColor="@color/white"
                android:background="@color/orangeButton"
                android:text="*" />
        </TableRow>

        <TableRow
            android:layout_marginBottom="1pt"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/btn4"
                android:onClick="btnEvent"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_weight="1"
                android:layout_marginRight="1pt"
                android:textSize="18sp"
                android:background="@color/lightgrayBg"
                android:text="4" />

            <Button
                android:id="@+id/btn5"
                android:onClick="btnEvent"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_weight="1"
                android:layout_marginRight="1pt"
                android:textSize="18sp"
                android:background="@color/lightgrayBg"
                android:text="5" />

            <Button
                android:id="@+id/btn6"
                android:onClick="btnEvent"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_weight="1"
                android:layout_marginRight="1pt"
                android:textSize="18sp"
                android:background="@color/lightgrayBg"
                android:text="6" />

            <Button
                android:id="@+id/btnMinus"
                android:onClick="operationEvent"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_weight="1"
                android:textSize="18sp"
                android:textColor="@color/white"
                android:background="@color/orangeButton"
                android:text="-" />
        </TableRow>

        <TableRow
            android:layout_marginBottom="1pt"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/btn1"
                android:onClick="btnEvent"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_weight="1"
                android:layout_marginRight="1pt"
                android:textSize="18sp"
                android:background="@color/lightgrayBg"
                android:text="1" />

            <Button
                android:id="@+id/btn2"
                android:onClick="btnEvent"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_marginRight="1pt"
                android:layout_weight="1"
                android:textSize="18sp"
                android:background="@color/lightgrayBg"
                android:text="2" />

            <Button
                android:id="@+id/btn3"
                android:onClick="btnEvent"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_weight="1"
                android:layout_marginRight="1pt"
                android:textSize="18sp"
                android:background="@color/lightgrayBg"
                android:text="3" />

            <Button
                android:id="@+id/btnAdd"
                android:onClick="operationEvent"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_weight="1"
                android:textSize="18sp"
                android:textColor="@color/white"
                android:background="@color/orangeButton"
                android:text="+" />
        </TableRow>
    </TableLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0"
        android:weightSum="4"
        android:orientation="horizontal">

        <Button
            android:layout_marginRight="1pt"
            android:id="@+id/btn0"
            android:onClick="btnEvent"
            android:layout_width="160dp"
            android:layout_height="80dp"
            android:layout_weight="2"
            android:textSize="18sp"
            android:background="@color/lightgrayBg"
            android:text="0" />

        <Button
            android:layout_marginRight="1pt"
            android:id="@+id/btnDot"
            android:onClick="btnEvent"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_weight="1"
            android:textSize="18sp"
            android:background="@color/lightgrayBg"
            android:text="." />

        <Button
            android:id="@+id/btnEqual"
            android:onClick="equalEvent"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_weight="1"
            android:textSize="18sp"
            android:textColor="@color/white"
            android:background="@color/orangeButton"
            android:text="=" />
    </LinearLayout>
</LinearLayout>